                tools:text="3" />

            <TextView
                style="@style/PlayButtonBig"               android:text="0"
                android:textSize="33sp"
                tools:text="3" />

            <TextView
                style="@style/PlayButtonBig"               android:text="0"
                android:textSize="33sp"
                tools:text="3" />

            <TextView
                style="@style/PlayButtonBig"               android:text="0"
                android:textSize="33sp"
                tools:text="3" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                style="@style/PlayButtonBig"
                android:text="0"
